#!/usr/bin/env bash
# ~/.local/bin/tui-cheatsheet-fancy

CHEATSHEET_FILE="$HOME/.config/dots/keybinds-cheatsheet.txt"

# Enhanced display with colors and categories
cat "$CHEATSHEET_FILE" | \
    awk '
        BEGIN { category = "" }
        /^# / {
            category = $0
            gsub(/^# /, "", category)
            printf "\033[1;35m━━━ %s ━━━\033[0m\n", category
            next
        }
        /::/ {
            split($0, parts, " :: ")
            printf "  \033[1;36m%-20s\033[0m \033[2m│\033[0m %s\n", parts[1], parts[2]
        }
    ' | \
    fzf \
        --prompt="⌨ " \
        --header="Keyboard Shortcuts - Press ESC to close" \
        --border=double \
        --height=100% \
        --layout=reverse \
        --ansi \
        --no-info \
        --pointer="▶" \
